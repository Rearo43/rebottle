<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layouts/head') %>
    <script
      src="https://kit.fontawesome.com/fc85feb03c.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/styles/inventory.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Mukta:wght@200&display=swap"
      rel="stylesheet"
    />
  </head>
  <header>
    <h1>Inventory</h1>
    <menu>
      <ul>
        <div>
          <a href="/calc">
            <i class="fas fa-calculator"></i>
          </a>
        </div>
        <div>
          <a href="/scents">
            <i class="fas fa-fill-drip"></i>
          </a>
        </div>
        <div>
          <a href="/">
            <i class="fas fa-home"></i>
          </a>
        </div>
        <div>
          <a href="/inventory">
            <i class="fas fa-exclamation-triangle"></i>
          </a>
        </div>
      </ul>
    </menu>
  </header>
  <body>
    <form class="updateForm" action="/update" method="post">
      <div class="updateF">
        <!-- <label for="name">Choose a candle:</label> -->
        <div class="select">
          <select name="name" id="name">
            <option value="0">Choose a Candle:</option>
            <% output.forEach(object=> { %>

            <option value="<%=object.name %>"><%= object.name %></option>
            <% }) %>
          </select>
        </div>
        <br />

        <label for="amount">Amount</label>
        <input type="radio" id="amount" name="column" value="amount" /><br />
        <label for="num">In Stock</label>
        <input type="radio" id="num" name="column" value="num" /><br />

        <label for="value">Value</label>
        <input type="number" name="value" step="0.01" /> <br />

        <button type="submit">Update</button>
      </div>
    </form>

    <form class="addForm" action="/addInventory" method="post">
      <div class="addF">
        <label for="name">Name:</label>
        <input type="text" name="name" /><br />
        <label for="scent">Scent:</label>
        <input type="text" name="scent" /><br />
        <label for="amount">Amount:</label>
        <input type="number" name="amount" step="0.01" /><br />
        <label for="num">In Stock:</label>
        <input type="number" name="num" /><br />
        <button type="submit">Add</button>
      </div>
    </form>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Scent</th>
          <th>Amount</th>
          <th>In Stock</th>
        </tr>
      </thead>
      <% output.forEach(object=>{ %>
      <tr>
        <td><%= object.name %></td>
        <td><%= object.scent %></td>
        <td><%= object.amount %></td>
        <td><%= object.num %></td>
      </tr>
      <% }) %>
    </table>
  </body>
  <!-- <footer><%- include('../layouts/footer') %></footer> -->
  <script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"
  ></script>
  <script src="/js/app.js"></script>
</html>
