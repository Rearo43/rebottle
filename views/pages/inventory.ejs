<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layouts/head') %>
    <link rel="stylesheet" href="/styles/base.css" />
  </head>
  <header>
    <title>Inventory</title>
  </header>
  <body>
    <form action="/update" method="post">
      <label for="name">Choose a candle:</label>

      <select name="name" id="name" multiple>
        <% output.forEach(object=> { %>

        <option value="<%=object.name %>"><%= object.name %></option>
        <% }) %>
      </select>

      <input type="radio" id="amount" name="column" value="amount" />
      <label for="amount">Amount</label><br />
      <input type="radio" id="num" name="column" value="num" />
      <label for="num">In Stock</label><br />

      <label for="value">Value</label>
      <input type="number" name="value" step="0.01"/>

      <button type="submit">Update</button>
    </form>

    <form action="/addInventory" method="post">
      <label for="name">Name</label>
      <input type="text" name="name" />
      <label for="scent">Scent</label>
      <input type="text" name="scent" />
      <label for="amount">Amount</label>
      <input type="number" name="amount" step="0.01" />
      <label for="num">Number</label>
      <input type="number" name="num" />
      <button type="submit">Add</button>
    </form>
    <table>
      <tr>
        <th>Name</th>
        <th>Scent</th>
        <th>Amount</th>
        <th>In Stock</th>
      </tr>
      <% output.forEach(object=>{ %>
      <tr>
        <td><%= object.name %></td>
        <td><%= object.scent %></td>
        <td><%= object.amount %></td>
        <td><%= object.num %></td>
      </tr>
      <% }) %>
    </table>
  </body>
  <footer><%- include('../layouts/footer') %></footer>
  <script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"
  ></script>
  <script src="/js/app.js"></script>
</html>
